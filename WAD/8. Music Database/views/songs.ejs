<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>All songs</title>
  </head>
  <body class="p-4">
    <h3 class="h3 m-2">All songs in the database</h3>
    <h3 class="h3 m-2">Total songs : <%= songs.length %></h3>
    <a href="/view/add"><button class="btn btn-primary">Add new song</button></a>
    <a href="/view/favourite"><button class="btn btn-secondary m-1">Explore Favourite songs</button></a>

    <table class="table">
      <thead>
        <th>Song Name</th>
        <th>Film Name</th>
        <th>Singer</th>
        <th>Music Director</th>
        <th>Actor</th>
        <th>Actress</th>
        <th>Update</th>
        <th>Favourite</th>
      </thead>
      <tbody>
        <% songs.forEach(function(song) {%>
            <tr>
                <td><%= song.songName %></td>
                <td><%= song.filmName %></td>
                <td><%= song.singer %></td>
                <td><%= song.musicDirector %></td>
                <td><%= song.actor %></td>
                <td><%= song.actress %></td>
                <td><a href=<%= '/view/update/'+song._id %>> <button class="btn btn-primary btn-sm">Update</button></a></td>
                <td><form method="post" action=<%= '/markfavourite/'+song._id %>><button  type="submit" class="btn btn-primary btn-danger">Favourite</button></form></td>
            </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
