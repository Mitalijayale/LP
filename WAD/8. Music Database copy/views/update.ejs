<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Add Music</title>
    <style>
      label {
        margin: 10px 0px 10px 0px;
      }
    </style>
  </head>
  <body>
    <h1 class="h3 mt-4 ms-4">Update song : <%= song.songName %></h1>
    <form action=<%= '/updatesong/'+song._id %> method="post" class="container m-2 p-4 g-2 w-75">
      <div class="form-group">
        <label for="songName">Song Name</label>
        <input
          type="text"
          id="songName"
          class="form-control"
          name="songName"
          value=<%= song.songName %>
          required
        >
      </input>
      </div>

      <label for="filmName">Film</label>
      <input
        type="text"
        id="filmName"
        class="form-control"
        name="filmName"
        required
        value=<%= song.filmName %>
      />

      <label for="singer">Singer</label>
      <input
        type="text"
        id="singer"
        class="form-control"
        name="singer"
        required
        value=<%= song.singer %>
      />

      <label for="musicDirector">Music Director</label>
      <input
        type="text"
        id="musicDirector"
        class="form-control"
        name="musicDirector"
        required
        value=<%= song.musicDirector %>
      />

      <label for="actor">Actor</label>
      <input
        type="text"
        id="actor"
        class="form-control"
        name="actor"
        value=<%= song.actor %>
      />

      <label for="actress">Actress</label>
      <input
        type="text"
        id="actress"
        class="form-control"
        name="actress"
        value=<%= song.actress %>
      />

      <button type="submit" class="btn btn-primary m-2">Update Song</button>
    </form>
  </body>
</html>
